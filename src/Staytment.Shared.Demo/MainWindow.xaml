<Window x:Class="Staytment.Shared.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Staytment.Shared.Demo.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <DockPanel>
            <Button Content="Create Post"
                    Command="{Binding CreatePost}"
                    DockPanel.Dock="Top" />

            <!-- TODO: Download Bing Maps SDK and include the map here -->
            <ListView ItemsSource="{Binding CurrentPosts}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Username}" />
                            <TextBlock Text=": " />
                            <TextBlock Text="{Binding Content}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
